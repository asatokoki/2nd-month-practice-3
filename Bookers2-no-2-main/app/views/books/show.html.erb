

<% if flash[:book_create_notice] %>
    <div class="flash">
         <%= flash[:book_create_notice] %>
    </div>
<% end %>
<% if flash[:book_update_notice] %>
    <div class="flash">
         <%= flash[:book_update_notice] %>
    </div>
<% end %>




    <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', book: @book, user: @user %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <tbody>


        <tr>
          <td>
            <%= link_to  user_path(@post.user) do %>
              <%= @post.user.name %>
              <%= attachment_image_tag @post.user, :profile_image, size: "50x50", fallback: "img_7c62aaccd6714ba4a1fedfaf0d5702c3142297.jpg" %>
            <% end %>
          </td>
          <td><%= link_to @post.title, book_path(@post.id) %></td>
          <td><%= @post.body %></td>

          <% if @user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path%></td>
          <td><%= link_to 'Destroy', book_path, method: :delete %></td>
          <% end %>
        </tr>
        <div>
          <p>コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
            <p><%= image_tag('sample-author1.jpg') %></p>
            <%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
          <% end %>
        </div>
        <div>
          <%= form_with(model:[@post, @comment], local: true) do |f| %>
          <!--座タッチではなくておすぎとピーコ的な-->
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>

    </tbody>
    </table>
    </div>



  </div>
</div>